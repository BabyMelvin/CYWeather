<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#aa8a8a8a"
        android:paddingTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <ImageView
            android:id="@+id/address_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/add"/>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/location"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textSize="50sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location"
                android:text="  上 海"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_alignBottom="@id/location"
                android:paddingLeft="100dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐汇"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_down"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/share"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >
        <ImageView
            android:id="@+id/audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audio"/>
        <TextView
            android:layout_toRightOf="@+id/audio"
            android:id="@+id/current_temperature"
            android:textSize="120sp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4°"/>
        <TextView
            android:id="@+id/current_weather"
            android:layout_toRightOf="@+id/current_temperature"
            android:layout_alignBottom="@+id/current_temperature"
            android:textSize="50sp"
            android:drawableRight="@drawable/cloudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云 "/>
        <LinearLayout
            android:paddingLeft="130dp"
            android:paddingTop="30dp"
            android:layout_toRightOf="@+id/current_weather"
            android:layout_alignBottom="@id/current_temperature"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30sp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/windy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  2级"/>
            <TextView
                android:textSize="30sp"
                android:paddingBottom="20dp"
                android:drawableLeft="@drawable/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  天气微冷，注意保暖"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2c2c2c"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/recycler_view"
        >
    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
